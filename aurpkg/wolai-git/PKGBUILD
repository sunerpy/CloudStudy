pkgname=wolai-git
pkgver=1.1.3
pkgrel=1
pkgdesc="wolai"
arch=('x86_64')
url="https://www.wolai.com/"
license=('custom')
groups=()
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=("!strip")
install=
changelog=
source=(
    "https://dcdn.wostatic.cn/dist/installers/wolai-${pkgver}.AppImage"
)
noextract=("wolai-${pkgver}.AppImage")
md5sums=(
    "2009b325318debf120fb99c1019bd117"
) #autofill using updpkgsums
build() {
  cd "$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
